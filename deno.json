{
	"tasks": {
		"install": "deno install --allow-scripts",
		"dev": "deno run -A --unstable npm:vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"fmt": {
		"include": [
			"src/",
			"vite.config.ts",
			"svelte.config.js"
		],
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"indentWidth": 4
	},
	"lint": {
		"include": [
			"src/",
			"vite.config.ts",
			"svelte.config.js"
		]
	},
	"nodeModulesDir": "manual",
	"imports": {
		"@sveltejs/adapter-cloudflare": "npm:@sveltejs/adapter-cloudflare@^5.0.3",
		"@sveltejs/kit": "npm:@sveltejs/kit@^2.17.3",
		"@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^5.0.3",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@^4.0.9",
		"@wooorm/starry-night": "npm:@wooorm/starry-night@^3.6.0",
		"bits-ui": "npm:bits-ui@^1.3.5",
		"hast-util-to-html": "npm:hast-util-to-html@^9.0.5",
		"mdsvex": "npm:mdsvex@^0.12.3",
		"svelte": "npm:svelte@^5.20.5",
		"svelte-check": "npm:svelte-check@^4.1.4",
		"tailwindcss": "npm:tailwindcss@^4.0.9",
		"vite": "npm:vite@^6.2.0"
	}
}
